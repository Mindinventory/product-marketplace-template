<div class="w-full bg-gray-200 p-3">
  <form action="" class="flex w-full flex-rows justify-between">
    <select name="feed" class="w-5/6 form-input text-xl">
      <option value="system.1">audit all events</option>
      {% for user in users.results %}
        {% assign feed = "user." | append: user.id %}
        <option value="{{feed}}" {% if params.feed == feed %}selected{% endif %}>user: {{user.username}}</option>
      {% endfor %}
    </select>
    <input type="submit" class="w-1/6 form-input" value="GO">
  </form>
</div>

<div class="w-full bg-gray-200 p-3">
  {% for record in list.results %}
    {% render 'theme/simple/activities/show', activity: record %}
  {% endfor %}
</div>
