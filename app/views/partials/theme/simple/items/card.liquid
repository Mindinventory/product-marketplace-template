<div class="w-full px-0 mb-8 md:p-4 lg:w-1/3 md:w-1/2 card">
  {% function_rc item_url = 'link_to', item: item %}

  <a class="relative block h-64 overflow-hidden rounded shadow-sm" href="{{ item_url }}">
    {% function_rc cover_url = 'theme/simple/items/cover_url', item: item %}
    <img alt="{{ item.name }}" class="block object-cover object-center w-full h-full" src="{{ cover_url }}">
  </a>

  <div class="mt-4">
    <h2 class="text-lg font-medium text-gray-900 ">
      <a href="{{ item_url }}">{{ item.name }}</a>
    </h2>

    <h3 class="mb-1 text-xs ">
      {% if item.category %}
        <div>
          {{ 'categories.' | append: item.category | t }}
        </div>
      {% endif %}
      {% comment %}
      {{ item.tags | join: ", " }}
      {% endcomment %}
    </h3>

    <div class="flex justify-between">
      <p class="mt-1">
        {% if item.orders[0].status == 'sold' %}
        <span class="line-through">{{ item.price | pricify_cents }}</span>
        <span class="font-semibold">&mdash; Sold</span>
        {% else %}
        <span class="text-lg">{{ item.price | pricify_cents }}</span>
        {% endif %}
      </p>

      <h3 class="mb-1 text-xs ">
        {% include 'theme/simple/business_card', user: item.owner.email %}
      </h3>
    </div>
  </div>
  {% include 'authenticity_token' %}
  <div class="container-fluid row no-gutters">
    <div class="col float-left m-2 ml-0">
      {% if item.isFavoriteSellers %}
        <button class="button bg-red-900" data-type="favorite_seller" data-id="{{ item.owner.id }}">Un-Favorite Seller</button>
      {% else %}
        <button class="button bg-blue-900" data-type="favorite_seller" data-id="{{ item.owner.id }}">Favorite Seller</button>
      {% endif %}
    </div>
    <div class="col float-left m-2 ml-0">
      {% if item.isWishlist %}
        <button class="button bg-red-900" data-type="wishlist" data-id="{{ item.id }}">Remove From Wishlist</button>
      {% else %}
        <button class="button bg-blue-900" data-type="wishlist" data-id="{{ item.id }}">Add To Wishlist</button>
      {% endif %}
    </div>
  </div>
</div>
