{% liquid
  if id == blank
    log 'looking for model without ID', type: 'showme'
    return_rc null
  endif

  graphql r = 'activities/model', id: id, limit: 1

  if r.errors
    log r, type: 'showme'
    break
  endif

  assign model = r.models.results.first

  graphql r = 'activities/photo', uuid: model.uuid

  log r, type: 'showme'

  hash_assign model['photos'] = r.models.results

  log model, type: 'showme'

  return_rc model
%}
