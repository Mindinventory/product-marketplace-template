{% liquid
  if id == blank
    log 'looking for model without ID', type: 'showme'
    return_rc null
  endif

  graphql r = 'activities/model', id: id, limit: 1

  if r.errors
    log r, type: 'showme query activities/model'
    break
  endif

  assign model = r.models.results.first

  assign uuid = model.uuid | default: 'no-uuid-this-is-fake-report-and-add'

  graphql r = 'activities/photo', uuid: uuid

  if r.errors
    log r, type: 'showme activities/photo query'
    break
  endif

  hash_assign model['photos'] = r.models.results

  return_rc model
%}
