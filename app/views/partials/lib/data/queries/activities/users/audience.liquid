{% liquid
  if id == empty
    log 'looking for audience for user and no ID passed', type: 'showme'
    return_rc null
  endif

  graphql r = 'activities/audience', id: id, limit: 1000

  if r.errors
    log r, type: 'showme'
    break
  endif

  assign ids = r.users.results | map: 'id'

  return_rc ids
%}
