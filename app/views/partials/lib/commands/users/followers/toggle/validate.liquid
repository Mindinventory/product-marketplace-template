{% liquid
  assign c = '{ "errors": {}, "valid": true }' | parse_json

  if object.properties[0].array_append == blank and object.properties[0].array_remove == blank
    include 'lib/register_error', contract: c, field_name: 'array_operation', key: 'app.errors.blank'
  endif

  if object.id == blank
    include 'lib/register_error', contract: c, field_name: 'type', key: 'app.errors.blank'
  endif

  if object.properties[0].name == blank
    include 'lib/register_error', contract: c, field_name: 'properties.name', key: 'app.errors.blank'
  endif

  hash_assign object['valid'] = c.valid
  hash_assign object['errors'] = c.errors

  return_rc object
%}
