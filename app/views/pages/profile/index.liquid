---
slug: profile
---
{% liquid
  function_rc user = 'lib/data/queries/users/find', username: context.params.slug2
  unless user.id
    render 'theme/simple/404', status: 404
    break
  endunless
  function_rc current_user = 'lib/data/queries/users/find', id: context.current_user.id
  function_rc list = 'lib/data/queries/activities/search', feed: 'user', feed_id: user.id, limit: 100

  include 'theme/simple/profile/show', user: user, activities: list, current_user: current_user
%}
