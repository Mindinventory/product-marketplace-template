---
slug: api/favseller
method: post
---
{% liquid
  include 'lib/must_be_authenticated'
  graphql u = 'sessions/current_user'
  function_rc user = 'lib/commands/users/create/build', object: u.user
  assign isFavoriteSeller = user.favorite_sellers_ids | is_included_in_array: context.params.id
  if isFavoriteSeller
    graphql r = 'users/removekey', id: u.user.id, key: "favorite_sellers_ids", value: context.params.id
  else
   graphql r = 'users/addkey', id: u.user.id, key: "favorite_sellers_ids", value: context.params.id
  endif
%}
